<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:id="@+id/playerParentLayout"
    android:background="@drawable/active_match_purple"
    android:clickable="true">

    <RelativeLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"

        android:background="@drawable/ripple"
        android:layout_gravity="center_horizontal|bottom">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/champIcon"
               />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"

                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="@dimen/active_match_text_size"
                android:text="Niko Belic123451"
                android:id="@+id/summonerName"
                android:layout_toRightOf="@id/champIcon"
                android:layout_toEndOf="@id/champIcon"

                 />
        <TextView

            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="@dimen/active_match_text_size"
            android:textStyle="bold"
            android:text="Riven"
            android:id="@+id/champName"
            android:layout_toRightOf="@id/champIcon"
            android:layout_toEndOf="@id/champIcon"
            android:layout_below="@+id/summonerName"
            />
        <TextView

            android:layout_marginLeft="5dp"
            android:textSize="@dimen/active_match_text_size"
            android:layout_width="wrap_content" android:layout_height="wrap_content"

            android:textStyle="bold"
            android:text="(10)"
            android:id="@+id/numberPlayed"
            android:layout_toRightOf="@id/champName"
            android:layout_toEndOf="@id/champName"
            android:layout_alignBottom="@id/champName"
            />

        <TextView
           android:textSize="@dimen/active_match_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:layout_marginLeft="110dp"
            android:layout_toRightOf="@id/champIcon"
            android:layout_alignBottom="@id/summonerName"
            android:id="@+id/wins_loses"/>
        <ImageView
            android:id="@+id/kda_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/score"
            android:layout_alignLeft="@id/wins_loses"
            android:layout_below="@id/wins_loses"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kda"
            android:textSize="@dimen/active_match_text_size"

            android:layout_toRightOf="@id/kda_img"
            android:layout_alignBottom="@id/champName"
            android:text="0/0/0"
            />


        <ImageView
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tierIcon"
            android:src="@drawable/provisional"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tierIcon"

            android:orientation="vertical"
            android:layout_centerVertical="true">
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNRANKED"

            android:id="@+id/rank"
            android:textSize="@dimen/active_match_text_size"/>

        <TextView
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lp"
           android:visibility="visible"
            android:text="100 LP"
            android:textSize="@dimen/active_match_text_size"/>
        </LinearLayout>




    </RelativeLayout>
</FrameLayout>