<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"



   >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/aatrox"
        android:id="@+id/championIcon"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W/L:"
        android:layout_toRightOf="@id/championIcon"
        android:id="@+id/wl_txt"/>
    <TextView
        android:layout_alignTop="@id/wl_txt"
        android:id="@+id/wl_number"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/wl_txt"
        android:text="10/0"
       />

  <TextView
      android:id="@+id/ratio_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/wl_txt"
      android:layout_alignLeft="@+id/wl_txt"
      android:text="Ratio:"/>
    <TextView
        android:id="@+id/ratio_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ratio_txt"
        android:layout_alignBottom="@id/ratio_txt"
        android:text="100%"/>
    <TextView

        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="300"
        android:id="@+id/cs_number"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/minion_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/minion"
        android:layout_toLeftOf="@id/cs_number"
        android:layout_toStartOf="@id/cs_number"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/kda_number"
        android:layout_toLeftOf="@id/minion_image"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:text="10.0/10.0/10.0"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/score"
        android:layout_toLeftOf="@id/kda_number"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"/>

</RelativeLayout>